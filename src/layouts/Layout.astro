---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
	description:string;
	canonical:string;
}

const { title, description,canonical } = Astro.props;
---
<!DOCTYPE html>
<html lang="fr">
	<Header title={title} description={description} canonical={canonical}></Header>
	<body class="darker">
		<slot />
		<Footer></Footer>
	</body>
</html> 